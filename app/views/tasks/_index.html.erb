<div class="container">
  <div class="col">
    <table class="table bg-light">
      <thead>
        <tr>
          <th>タスク名</th>
          <th>メモ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.memo %></td>
            <td class="text-right">
              <%= link_to '詳細', task_path(task), class: "btn btn-sm btn-outline-info" %>
              <%= link_to '編集', edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to '削除', task_path(task), method: :delete, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>