<div class='text-right mb-2'>
  <%= link_to "全て削除", destroy_all_tasks_path, method: :delete, "data-confirm" => "全て削除します。本当によろしいですか。", class: "btn btn-sm btn-outline-danger" %>
</div>
<table class="table bg-light">
  <thead>
    <tr>
      <th>タスク名</th>
      <th>メモ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= truncate(task.memo, length: 18) %></td>
        <td class="text-right">
          <%= link_to '詳細', task_path(task), class: "btn btn-sm btn-outline-info" %>
          <%= link_to '編集', edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>