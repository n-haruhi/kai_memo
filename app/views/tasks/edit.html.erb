<div class="container">
  <div class="col">
    <h3>タスク編集</h3>

    <%= form_with model: @task, local: true do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control task_title' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>

    <% end %>

    <%= link_to '戻る', tasks_path %>
  </div>
</div>