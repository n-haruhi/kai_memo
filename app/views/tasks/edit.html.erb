<div class="container">
  <div class="col">
    <h3>タスク編集</h3>
    <%= form_with model: @task, local: true do |f| %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control task_title' %>
      </div>
      <div class="form-group">
        <%= f.label :memo, "メモ" %>
        <%= f.text_area :memo, class: 'form-control task_memo' %>
      </div>
      <div class="form-group">
        <%= f.label :image, "画像" %><br>
        <%= f.file_field :task_image, accept: "image/*", class: "form-control-file task_image" %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-sm btn-outline-success' %>
      </div>

    <% end %>

    <%= link_to '一覧へ', tasks_path, class: "btn btn-sm btn-outline-primary" %>
  </div>
</div>