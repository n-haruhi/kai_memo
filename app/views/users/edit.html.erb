<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 mx-auto'>
      <h3>User info</h3>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file profile_image" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-sm btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>