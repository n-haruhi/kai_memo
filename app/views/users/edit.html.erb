<div class='container'>
  <h3>プロフィール編集</h3>
  <div class='col-md-4'>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file profile_image" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-sm btn-outline-success' %>
      </div>
    <% end %>
  </div>
</div>