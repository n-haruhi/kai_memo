<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 mx-auto'>

      <h3>User info</h3>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image, size: '100x100' %></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

    </div>
  </div>
</div>