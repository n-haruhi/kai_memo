  <%= form_with model: @genre, local: true do |f| %>
    <%= render 'layouts/errors', obj: @genre %>

    <div class="form-group">
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, class: 'form-control genre_name' %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-sm btn-outline-success" %>
    </div>

  <% end %>